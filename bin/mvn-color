#!/bin/sh

# Formatting constants
BLACK=`tput setaf 0`
RED=`tput setaf 1`
GREEN=`tput setaf 2`
YELLOW=`tput setaf 3`
BLUE=`tput setaf 4`
MAGENTA=`tput setaf 5`
CYAN=`tput setaf 6`
WHITE=`tput setaf 7`
RESET=`tput sgr0`

mvn $@ | sed -e "s/\(\[ERROR\].*$\)/${RED}\1${RESET}/g" \
  -e "s/\(\[WARNING\].*$\)/${YELLOW}\1${RESET}/g" \
  -e "s/\(FAILURE\)/${RED}\1${RESET}/g" \
  -e "s/\(SKIPPED\)/${BLUE}\1${RESET}/g" \
  -e "s/\(SUCCESS\)/${GREEN}\1${RESET}/g" \
  -e "s/\[INFO\] \(Building .*$\)/\[INFO\] ${BLUE}\1${RESET}/g" \
  -e "s/\[INFO\] \(------------------------------------------------------------------------\)/\[INFO\] ${BLUE}\1${RESET}/g"